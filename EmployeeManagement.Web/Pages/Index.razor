@page "/"

<h3>Employees</h3>

@if (Employees.IsNullOrEmpty())
{
    <div class="spinner"></div>
}
else
{
    <div class="card-deck">
        @foreach (var employee in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                <div class="card-header">
                    <h3>@employee.GivenNames @employee.FamilyName</h3>
                </div>
                <img class="card-img-top imgThumb" src="@employee.PhotoUri" />
                <div class="card-footer text-center">
                    <button type="button" class="btn btn-primary m-1">View</button>
                    <button type="button" class="btn btn-primary m-1">Edit</button>
                    <button type="button" class="btn btn-danger m-1">Delete</button>
                </div>
            </div>
        }
    </div>
}